{% extends 'base.html.twig' %}

{% block title %}Hello ModelController!{% endblock %}

{% block body %}
<style>     
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }     
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; } 
</style>
<h1 style="margin-top:30px">Liste des modèles</h1>
{% if models is not empty %}
<div class="container p-5 m-5">
    <table class="table table p-5 m-5">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Marque</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for m in models %}
                <tr>
                    <td>{{ m.name }}</td>
                    <td>{{ m.price }}</td>
                    <td>{{ m.brand.name }}</td>
                    <td>
                        <a href="{{path('model', {'id': m.id})}}" class="btn btn-primary">
                            Afficher
                        </a>
                        <a href="{{path('delete_model', {'id':m.id})}}" class="btn btn-danger">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    
{% else %}
    <p>Aucun modèle</p>
{% endif %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center">Créer un modèle</h1>
            <div class="p-5 m-5 border">
                {{ form(ajout) }}
            </div>
        </div>
    </div>
</div>


{% endblock %}
